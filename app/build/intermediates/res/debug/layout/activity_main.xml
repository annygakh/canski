<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin"

                android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="top"
        android:layout_weight="1">
        <TextView
            android:text="@string/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="5">


        
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="@dimen/padding">

            <!--5 textboxes with names of mountains go here -->
            <TextView
                android:id="@+id/whistler_text"
                android:text="@string/whistler_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"/>
            <TextView
                android:id="@+id/blackcomb_text"
                android:text="@string/blackcomb_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"/>
            <TextView
                android:id="@+id/cypress_text"
                android:text="@string/cypress_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"/>
            <TextView
                android:id="@+id/grouse_text"
                android:text="@string/grouse_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"/>
            <TextView
                android:id="@+id/seymour_text"
                android:text="@string/seymour_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/whistler_status"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"/>
            <TextView
                android:id="@+id/blackcomb_status"
                android:text="@string/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"/>
            <TextView
                android:id="@+id/cypress_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"/>
            <TextView
                android:id="@+id/grouse_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"/>
            <TextView
                android:id="@+id/seymour_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:gravity="center"/>

            <!--5 textboxes with status of the mountains go here -->
        </LinearLayout>
        
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_weight="2">

        <!--<Button-->
            <!--android:layout_weight="1"-->
            <!--android:id="@+id/refresh_button"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/refresh"-->
            <!--android:padding="@dimen/padding"-->
            <!--android:textAlignment="center"-->
            <!--android:layout_marginRight="@dimen/margin_bottom_buttons"-->
            <!--/>-->

        <Button
            android:layout_weight="1"
            android:id="@+id/about_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/about"
            android:padding="@dimen/bottom_buttons_padding"


            android:layout_margin="@dimen/bottom_buttons_margin" />

        <Button
            android:layout_weight="1"
            android:id="@+id/report_bug_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/report_bug"
            android:padding="@dimen/bottom_buttons_padding"

            android:layout_margin="@dimen/bottom_buttons_margin"/>

        </LinearLayout>

</LinearLayout>
